# NPM Supply Chain Security Configuration
# Response to 2025 Aug/Sep attacks

# Exact version pinning (no ^ or ~ ranges)
save-exact=true

# Security audits
audit-level=moderate

# Disable install scripts by default
ignore-scripts=true

# Disable funding messages
fund=false

# Strict peer dependencies
strict-peer-dependencies=true

# Use pnpm for package management
engine-strict=true
